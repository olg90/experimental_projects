    v[i]=v[i-1]+dvdt*dt
    
    dgdt=-(g[i-1]-gb[dnum])/taug+c1*I[i-1]
    g[i]=g[i-1]+dgdt*dt
    
    if v[i]>vth[dnum]:
        v[i]=vb[dnum]
        aps.append(i)
    
    
    
