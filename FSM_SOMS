    while (i / sfreq) < (runtime * dt):  # convert to seconds
        pretimes.append(int((i / sfreq) / dt))  # convert time to index
        i += 1

    Iext = np.zeros(runtime)
    y = np.zeros_like(Iext)
    # Time evolution
